<UserControl x:Class="Server.SpectrumControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Server.Controls" xmlns:Controls="clr-namespace:AudioVisualizationLibrary.Controls;assembly=AudioVisualizationLibrary"
        mc:Ignorable="d">
    <Grid x:Name="grid" Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Controls:AudioVisualizerControl x:Name="Visualizer" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,0"/>
        <local:ColorPicker x:Name="BackgroundColorPicker" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="200"/>
    </Grid>
</UserControl>